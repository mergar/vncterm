#!/usr/local/bin/cbsd
#v10.3.0
MYARG="jname"
MYOPTARG="mode addr port command"
MYDESC="Run VNC server for jail"
ADDHELP="mode=run, stop\n\
addr= IP address for listen, default - nodeip\n\
port= PORT for listen, default - auto\n\
command= run comman on start, default: /usr/bin/login\n"

. ${subr}
. ${system}
. ${tools}
. ${strings}

init $*

. ${jrcconf}
[ $? -eq 1 ] && err 1 "${MAGENTA}No such jail: ${GREEN}${jname}${NORMAL}"
[ ${jid} -eq 0 ] && err 1 "${MAGENTA}Not running${NORMAL}"

cbsdvnc="${moduledir}/vncterm.d/cbsdvnc"

[ ! -f "${cbsdvnc}" ] && err 1 "${MAGENTA}No cbsdvnc, please do: ${GREEN}make -C ${moduledir}/vncterm.d${NORMAL}"

[ -z "${command}" ] && command="/usr/bin/login"

${cbsdvnc} -j ${jid} -s ${command}
